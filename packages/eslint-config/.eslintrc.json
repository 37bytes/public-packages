{
    "extends": ["react-app"],
    "plugins": ["react-hooks", "no-storage", "import"],
    "ignorePatterns": [],
    "rules": {
        "curly": "error",
        "eqeqeq": "error",
        "no-console": "error",
        "no-debugger": "error",
        "no-alert": "error",
        "no-empty": "error",
        "no-else-return": "warn",
        "no-extra-boolean-cast": [
            "error",
            {
                "enforceForLogicalOperands": true
            }
        ],
        "no-var": "error",
        "no-self-compare": "error",
        "no-useless-return": "error",
        "no-implicit-coercion": [
            "error",
            {
                "boolean": true,
                "number": true,
                "string": true
            }
        ],
        "no-restricted-syntax": [
            "error",
            {
                "selector": "JSXAttribute[value.type='JSXExpressionContainer'][value.expression.type='ArrowFunctionExpression']",
                "message": "Arrow functions are not allowed in props."
            }
        ],
        "default-case": "error",
        "prefer-template": "warn",
        "object-shorthand": ["error", "always"],
        "no-storage/no-browser-storage": 2,
        "react/jsx-key": [
            "error",
            {
                "checkFragmentShorthand": true,
                "warnOnDuplicates": true
            }
        ],
        "react-hooks/exhaustive-deps": "error",
        "react/self-closing-comp": [
            "error",
            {
                "component": true,
                "html": true
            }
        ],
        "react/jsx-curly-brace-presence": ["warn", "never"],
        "react/function-component-definition": [
            2,
            {
                "namedComponents": "arrow-function",
                "unnamedComponents": "arrow-function"
            }
        ],
        "import/newline-after-import": [
            "error",
            {
                "count": 1
            }
        ],
        "import/no-anonymous-default-export": ["error"],
        "import/prefer-default-export": "error",
        "import/order": ["warn"],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": false
            }
        ],
        "react/jsx-boolean-value": [1, "never"],
        "no-nested-ternary": "error",
        "camelcase": [
            "error",
            {
                "properties": "always"
            }
        ],
        "no-negated-condition": "error",
        "react/no-array-index-key": "warn",
        "react/button-has-type": "warn"
    }
}
